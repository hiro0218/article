{
  "filters": {
    "comments": true
  },
  "plugins": {
    "@textlint/markdown": {
      "extensions": [
        ".md"
      ]
    }
  },
  "rules": {
    "preset-jtf-style": {
      "3.1.1.全角文字と半角文字の間": false,
      "4.2.7.コロン(：)": false
    },
    "web-plus-db": true,
    "preset-ja-technical-writing": true,
    "no-mix-dearu-desumasu": {
      "preferInHeader": "",
      "preferInBody": "である",
      "preferInList": "である",
      "strict": true
    }
  }
}
