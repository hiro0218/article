{
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "IE",
        "Web",
        "アプリ",
        "プレフィックス",
        "パスカルケース",
        "ドライバー",
        "サーバー",
        "レイヤー",
        "テクノロジー",
        "ポリフィル",
        "プレフィクス",
        "インターフェース",
        "/(?:([^/])ウェブ)|(?:ウェブ([^/\+]))/",
        "ユーザービリティ",
        "コピペ",
        "ラッパー",
        "仕組み",
        "言われる",
        "言わ",
        "是非",
        "様々",
        "言え",
        "既定",
        "同士",
        "例えば",
        "全て",
        "他",
        "の他の",
        "はじめ",
        "ほかの",
        "した上",
        "基づ",
        "持つ",
        "刑事",
        "キャラクター",
        "メンテナ",
        "で欲し",
        "て欲し",
        "は他に",
        "発火",
        "0から",
        "事前準備"
      ]
    }
  },
  "plugins": {
    "@textlint/markdown": {
      "extensions": [
        ".md"
      ]
    }
  },
  "rules": {
    "prh": {
      "rulePaths": [
        "./node_modules/prh/prh-rules/media/WEB+DB_PRESS.yml",
        "./node_modules/prh/prh-rules/media/techbooster.yml"
      ],
    },
    "preset-jtf-style": {
      "1.1.3.箇条書き": false,
      "3.1.1.全角文字と半角文字の間": false,
      "4.2.7.コロン(：)": false
    },
    "preset-ja-technical-writing": {
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "である",
        "preferInList": "である",
        "strict": true
      },
      "sentence-length": {
        "max": 150,
        "skipPatterns": [
          "/\\[.*?\\]/"
        ]
      },
      "no-exclamation-question-mark": false,
      "no-hankaku-kana": false,
      "ja-no-mixed-period": {
        "allowPeriodMarks": [
          ":",
          "："
        ]
      },
      "no-doubled-joshi": {
        "strict": false,
        "allow": [
          "も",
          "や",
          "か"
        ],
        "separatorCharacters": [
          ",",
          "，",
          "、",
          ".",
          "．",
          "。",
          "?",
          "!",
          "？",
          "！",
          "「",
          "」",
          "\"",
          "”",
          "“"
        ]
      },
    },
    "ja-no-successive-word": {
      "allowOnomatopee": true
    },
    "no-doubled-conjunction": true,
  }
}
