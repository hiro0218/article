{
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "IE",
        "Web",
        "アプリ",
        "プレフィックス",
        "パスカルケース",
        "ドライバー",
        "サーバー",
        "トリガー",
        "レイヤー",
        "テクノロジー",
        "ポリフィル",
        "プレフィクス",
        "インターフェース",
        "ユーザービリティ",
        "コピペ",
        "ラッパー",
        "キャラクター",
        "メンテナ",
        "Grid",
        "ワード",
        "保てる",
        "仕組み",
        "既定",
        "同士",
        "曖昧",
        "仮名",
        "捉える",
        "揃う",
        "刑事",
        "発火",
        "0から",
        "事前準備",
        "master",
        "/(?:([^/])ウェブ)|(?:ウェブ([^/+]))/",
        "/(?:([^/])関わらず)|(?:関わらず([^/+]))/",
        "/(?:([^/])他)|(?:他([^/+]))/",
        "/(?:([^/])欲し)|(?:欲し([^/+]))/",
        "/(?:([^/])(?:言わ|言え|繋が|基づ|持つ))|(?:(?:言わ|言え|繋が|基づ|持つ)([^/+]))/",
        "/(?:([^/])(?:例えば|全て|全く|改めて|はじめ|ほかの))|(?:(?:例えば|全て|全く|改めて|はじめ|ほかの)([^/+]))/",
        "/(?:([^/])(?:言われる|は他に|した上|に従って))|(?:(?:言われる|は他に|した上|に従って)([^/+]))/",
        "/(?:([^/])(?:是非|様々|後々))|(?:(?:是非|様々|後々)([^/+]))/"
      ]
    }
  },
  "plugins": {
    "@textlint/markdown": {
      "extensions": [
        ".md"
      ]
    }
  },
  "rules": {
    "prh": {
      "rulePaths": [
        "./node_modules/prh/prh-rules/media/WEB+DB_PRESS.yml",
        "./node_modules/prh/prh-rules/media/techbooster.yml"
      ]
    },
    "preset-jtf-style": {
      "1.1.3.箇条書き": false,
      "3.1.1.全角文字と半角文字の間": false,
      "4.2.7.コロン(：)": false
    },
    "preset-ja-technical-writing": {
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "である",
        "preferInList": "である",
        "strict": true
      },
      "sentence-length": {
        "max": 150,
        "skipPatterns": [
          "/\\[.*?\\]/"
        ]
      },
      "max-kanji-continuous-len": {
        "max": 10,
        "allow": []
      },
      "no-exclamation-question-mark": false,
      "no-hankaku-kana": false,
      "ja-no-mixed-period": {
        "allowPeriodMarks": [
          ":",
          "："
        ]
      },
      "no-doubled-joshi": {
        "strict": false,
        "allow": [
          "も",
          "や",
          "か"
        ],
        "separatorCharacters": [
          ",",
          "，",
          "、",
          ".",
          "．",
          "。",
          "?",
          "!",
          "？",
          "！",
          "「",
          "」",
          "\"",
          "”",
          "“"
        ]
      }
    },
    "ja-no-successive-word": {
      "allowOnomatopee": true
    },
    "no-doubled-conjunction": true,
    "@textlint-ja/preset-ai-writing": {
      "no-ai-list-formatting": {
        "allows": [
          "許可したいテキスト",
          "/正規表現パターン/i"
        ],
        "disableBoldListItems": false,
        "disableEmojiListItems": false
      },
      "no-ai-hype-expressions": {
        "allows": [
          "許可したいテキスト",
          "/正規表現パターン/"
        ],
        "disableAbsolutenessPatterns": false,
        "disableAbstractPatterns": false,
        "disabledPredictivePatterns": false
      },
      "no-ai-colon-continuation": {
        "allows": [
          "許可したいテキスト",
          "/正規表現パターン/"
        ],
        "disableCodeBlock": false,
        "disableList": false,
        "disableQuote": false,
        "disableTable": false
      },
      "ai-tech-writing-guideline": {
        "severity": "info",
        "allows": [
          "許可したいテキスト",
          "/正規表現パターン/"
        ],
        "disableRedundancyGuidance": false,
        "disableVoiceGuidance": false,
        "disableClarityGuidance": false,
        "disableConsistencyGuidance": false,
        "disableStructureGuidance": false,
        "enableDocumentAnalysis": true
      }
    }
  }
}
